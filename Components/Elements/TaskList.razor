<div class="card flex-shrink-0 flex-grow-1 shadow-sm" style="min-width: 250px; scroll-snap-align: start;">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0">@BoardName</h5>
    </div>
    <div class="card-body">
        @if (TaskViews.Count == 0)
        {
            <p class="text-muted">No tasks available.</p>
        }
        else
        {
            @foreach (var taskView in TaskViews)
            {
                <TaskView TaskId="@taskView.TaskId" Title="@taskView.Title" Description="@taskView.Description" />
            }
        }
    </div>
</div>

@code {
    [Parameter]
    public string? BoardName { get; set; }

    [Parameter]
    public List<TaskView> TaskViews { get; set; } = new List<TaskView>();
}